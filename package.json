{
  "name": "feature-scope-explorer",
  "displayName": "FeatureScope Explorer",
  "description": "Custom tree view for quickly navigating relevant areas of large monorepos.",
  "version": "0.1.2",
  "publisher": "cem802",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cem802/feature-scope-explorer"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:featureScope"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "featureScope",
          "name": "Feature Scope"
        }
      ]
    },
    "commands": [
      {
        "command": "featureScope.refresh",
        "title": "Feature Scope: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "featureScope.setFilter",
        "title": "Feature Scope: Set Filter",
        "icon": "$(filter)"
      },
      {
        "command": "featureScope.clearFilter",
        "title": "Feature Scope: Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "featureScope.toggleExactMatch",
        "title": "Feature Scope: Toggle Exact Folder Match",
        "icon": "$(whole-word)"
      },
      {
        "command": "featureScope.collapseAll",
        "title": "Feature Scope: Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "featureScope.expandAll",
        "title": "Feature Scope: Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "featureScope.addCurrentFile",
        "title": "Feature Scope: Add Current File"
      },
      {
        "command": "featureScope.addFolder",
        "title": "Feature Scope: Add Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "featureScope.clearAll",
        "title": "Feature Scope: Clear Filter and Added Items",
        "icon": "$(close-all)"
      },
      {
        "command": "featureScope.newConfig",
        "title": "Feature Scope: New Config",
        "icon": "$(add)"
      },
      {
        "command": "featureScope.loadConfig",
        "title": "Feature Scope: Load Config",
        "icon": "$(list-selection)"
      },
      {
        "command": "featureScope.saveCurrent",
        "title": "Feature Scope: Save Current Config",
        "icon": "$(save)"
      },
      {
        "command": "featureScope.deleteConfig",
        "title": "Feature Scope: Delete Config",
        "icon": "$(trash)"
      },
      {
        "command": "featureScope.reveal",
        "title": "Reveal in Explorer"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "featureScope.clearFilter",
          "when": "view == featureScope",
          "group": "navigation@1"
        },
        {
          "command": "featureScope.clearAll",
          "when": "view == featureScope",
          "group": "navigation@2"
        },
        {
          "command": "featureScope.setFilter",
          "when": "view == featureScope",
          "group": "navigation@3"
        },
        {
          "command": "featureScope.toggleExactMatch",
          "when": "view == featureScope",
          "group": "navigation@4"
        },
        {
          "command": "featureScope.addFolder",
          "when": "view == featureScope",
          "group": "navigation@5"
        },
        {
          "command": "featureScope.newConfig",
          "when": "view == featureScope",
          "group": "navigation@6"
        },
        {
          "command": "featureScope.saveCurrent",
          "when": "view == featureScope",
          "group": "navigation@7"
        },
        {
          "command": "featureScope.loadConfig",
          "when": "view == featureScope",
          "group": "navigation@8"
        },
        {
          "command": "featureScope.deleteConfig",
          "when": "view == featureScope",
          "group": "navigation@9"
        },
        {
          "command": "featureScope.collapseAll",
          "when": "view == featureScope && featureScope.hasExpandedNodes",
          "group": "navigation@99"
        },
        {
          "command": "featureScope.expandAll",
          "when": "view == featureScope && !featureScope.hasExpandedNodes",
          "group": "navigation@99"
        }
      ],
      "view/item/context": [
        {
          "command": "featureScope.reveal",
          "when": "view == featureScope && viewItem == folder",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "featureScope.addFolder",
          "when": "resourceScheme == file",
          "group": "navigation@99"
        }
      ]
    },
    "keybindings": [
      {
        "command": "featureScope.addCurrentFile",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo 'No lint configured'"
  },
  "dependencies": {
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5"
  }
}
